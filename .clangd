CompileFlags:
  Add:
    - -std=c++17
    - -I./include
    - -isystem
    - /usr/include/vtk-9.1
    - -isystem
    - /usr/include/c++/11
    - -isystem
    - /usr/include/x86_64-linux-gnu/c++/11
    - -Dkiss_fft_scalar=double
  CompilationDatabase: build/

Index:
  Background: Build

Diagnostics:
  UnusedIncludes: None
  ClangTidy:
    Add: "*"
    Remove: "readability-*,google-*,modernize-*"

Hover:
  ShowAKA: Yes